<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fixed_aspect="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/species_details_main_image_bg"
    android:onClick="showLicense" >

    <org.freeland.wildscan.widget.FixedAspectImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/empty_species"
        fixed_aspect:mode="fix_width"
        fixed_aspect:ratio="1.0" />
    <!--
               android:layout_height="@dimen/species_details_image_height"
	        android:layout_gravity="center_horizontal|bottom" />
    -->

    <TextView
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="4dp"
        android:alpha="60"
        android:background="@color/header_item_bg_med"
        android:padding="1dp"
        android:textColor="@color/species_details_copyright_text"
        android:textSize="@dimen/species_details_image_copyright_text_size"
        android:textStyle="bold" />

</FrameLayout>