    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/speciesLibHeaderLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" >

        <RelativeLayout
            android:id="@+id/speciesLibDisplayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
		<LinearLayout
		    android:id="@+id/speciesLibSearchPopup"
		    android:visibility="invisible"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="top|right"
		    android:background="@color/header_item_bg_light"
		    android:orientation="vertical" >
		    
		    <org.freeland.wildscanlaos.widget.SearchAutoCompleteView
		        android:id="@+id/searchAutocomplete"
		        android:layout_width="@dimen/search_popup_width"
		        android:layout_height="wrap_content"
		        android:dropDownWidth="@dimen/search_popup_width"
		        android:dropDownHeight="@dimen/search_dropdown_height"
		        android:singleLine="true"
		        android:inputType="text|textNoSuggestions"
		        android:imeOptions="actionDone"
		        android:padding="10dp"
		        android:textSize="@dimen/search_dropdown_text_size"
		        android:textColor="@android:color/white"
		        android:hint="@string/species_lib_search_by_name_hint" />
		    
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginLeft="1dp"
		        android:layout_marginRight="1dp"
		        android:layout_marginTop="2dp"
		        android:layout_marginBottom="1dp"
		        android:background="@color/header_item_bg_dark"
		        android:clickable="false"
		        android:focusable="false"
		        android:focusableInTouchMode="false"
		        android:longClickable="false" />
		    
		    <Spinner
		        android:id="@+id/searchFilter"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_margin="1dp"
		        android:textSize="@dimen/search_dropdown_text_size"
		        android:textColor="@android:color/white"
		        android:focusable="true"
		        android:focusableInTouchMode="true"
		        android:spinnerMode="dialog"
		        android:hint="@string/species_lib_search_set_filter"
		        android:entries="@array/species_filters" />
		</LinearLayout>
        
    </FrameLayout>

</RelativeLayout>