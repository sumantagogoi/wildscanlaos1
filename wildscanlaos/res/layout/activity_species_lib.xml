<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactListActivity" >

    <RelativeLayout
        android:id="@+id/speciesLibHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_header_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/speciesLibTitle"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/speciesLibHeaderBtnGallery"
            android:background="@color/header_item_bg_dark"
            android:gravity="center_vertical"
            android:text="@string/species_lib_header_title"
            android:textColor="@color/header_item_fg"
            android:textSize="@dimen/global_header_title_text_size" />

        <ImageButton
            android:id="@id/speciesLibHeaderBtnGallery"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/speciesLibHeaderBtnFavorites"
            android:background="@color/header_item_bg_light"
            android:gravity="center"
            android:onClick="onClickHeaderBtnGallery"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_header_gallery"
            android:text="@string/species_lib_header_btn_gallery"
            android:textColor="@color/header_item_fg" />

        <ImageButton
            android:id="@id/speciesLibHeaderBtnFavorites"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/speciesLibHeaderBtnSearch"
            android:background="@color/header_item_bg_med"
            android:gravity="center"
            android:onClick="onClickHeaderBtnFavorites"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_header_fav"
            android:text="@string/species_lib_header_btn_favorites"
            android:textColor="@color/header_item_fg" />

        <ImageButton
            android:id="@+id/speciesLibHeaderBtnSearch"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/header_item_bg_light"
            android:onClick="onClickHeaderBtnSearch"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_header_search"
            android:text="@string/species_lib_header_btn_search"
            android:textColor="@color/header_item_fg" />
    </RelativeLayout>

