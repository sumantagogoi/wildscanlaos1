        <RelativeLayout
            android:id="@+id/reportWizardShareLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2.5dp"
            android:background="@android:color/white" >

            <TextView
                android:id="@+id/reportWizardShareTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:paddingBottom="2.5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/report_wizard_screen_4_share_title"
                android:textSize="@dimen/report_section_label_size" />

             <CheckBox
                android:id="@+id/reportWizardChkShareViaEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reportWizardShareTitle"
                android:padding="5dp"
                android:text="@string/report_wizard_screen_4_share_email_label"
                android:textSize="@dimen/report_text_size" />

            <TextView
                android:id="@+id/reportWizardChkShareViaEmailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/reportWizardChkShareViaEmail"
