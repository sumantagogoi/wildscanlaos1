<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:fixed_aspect="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="25dp"
                android:text="@string/species_details_no_images"
                android:textSize="20sp"/>

            <org.freeland.wildscanlaos.view.FixedAspectViewPager
                android:id="@+id/speciesDetailsMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/species_details_image_height"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                fixed_aspect:mode="fix_width"
                fixed_aspect:ratio="1.0"/>

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/speciesDetailsImageScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/speciesDetailsMain"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:background="@color/header_item_bg_light">

            <LinearLayout
                android:id="@+id/speciesDetailsImageThumbnails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/excerpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/speciesDetailsImageScroll"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:background="@color/list_item_text_bg">

            <TextView
                android:id="@+id/speciesDetailsExcerpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/btns"
                android:padding="7dp"
                android:textColor="@color/list_item_text_fg"
                android:textSize="@dimen/species_details_excerpt_text_size"/>

            <LinearLayout
                android:id="@+id/btns"
                android:layout_width="@dimen/species_details_fav_width"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/speciesDetailsExcerpt"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/speciesDetailsExcerpt"
                android:background="@color/list_item_text_bg"
                android:orientation="vertical"
                android:paddingLeft="2.5dp"
                android:paddingRight="5dp">

                <ImageButton
                    android:id="@+id/speciesDetailsButtonFav"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/list_item_text_bg"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:onClick="onClickButtonFav"
                    android:scaleType="center"
                    android:src="@drawable/selector_list_fav"/>

                <ImageButton
                    android:id="@+id/speciesDetailsButtonReport"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/list_item_text_bg"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:onClick="onClickButtonReport"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_action_report"/>
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/speciesDetailsSpeciesInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/dummy"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/excerpt"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:background="@color/list_item_text_bg"
            android:maxLines="100"
            android:padding="4dp"
            android:scrollbars="vertical"
            android:textColor="@color/list_item_text_fg"
            android:textSize="@dimen/species_details_info_text_size"
            android:verticalScrollbarPosition="right"/>

        <View
            android:id="@+id/dummy"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"/>

    </LinearLayout>

</ScrollView>