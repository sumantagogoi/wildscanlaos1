<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/region_dialog_heading1"
            android:textColor="@color/textColorPrimaryDialog"
            android:textSize="16sp" />
        />

        <Spinner
            android:id="@+id/regionSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/region_dialog_heading2"
            android:textColor="@color/textColorPrimaryDialog"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/region_dialog_sub_title"
            android:textColor="@color/textColorPrimaryDialog" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.7"
        android:background="@color/textColorPrimaryDialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/region_dialog_global"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.7"
                    android:text="65mb"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/globalSpeciesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Species:50"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/globalContactsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.7"
                    android:text="Contacts:50"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/globalCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.5"
            android:checked="true"
            android:clickable="false"
            android:gravity="right" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.7"
        android:background="@color/textColorPrimaryDialog" />

    <LinearLayout
        android:id="@+id/south_east_asia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/region_dialog_south_asia"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.7"
                    android:text="65mb"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/asiaSpeciesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Species:50"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/asiaContactsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.7"
                    android:text="Contacts:50"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/southAsiaCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.5"
            android:gravity="right" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.7"
        android:background="@color/textColorPrimaryDialog" />

    <LinearLayout
        android:id="@+id/africaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/region_africa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/region_dialog_africa"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.7"
                    android:text="65mb"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/africaSpeciesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Species:50"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/africaContactTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.7"
                    android:text="Contacts:50"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/africaCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.5"
            android:enabled="true"
            android:gravity="right" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.7"
        android:background="@color/textColorPrimaryDialog" />

    <LinearLayout
        android:id="@+id/southAmericaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha=".5"
        android:clickable="false"
        android:padding="8dp"
        android:visibility="invisible">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/region_south_america"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/region_dialog_south_america"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.7"
                    android:text="65mb"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/americaSpeciesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Species:50"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/americaContactTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.7"
                    android:text="Contacts:50"
                    android:textColor="@color/textColorPrimaryDialog"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <CheckBox
            android:id="@+id/southAmericaCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.5"
            android:clickable="false"
            android:gravity="right" />


    </LinearLayout>


</LinearLayout>